---
// servicios.astro - Refactorizado usando BaseLayout

// Layout
import BaseLayout from "../layouts/BaseLayout.astro";

// Importar imágenes locales específicas para esta página
import panoramica1 from "../assets/images/work/panoramica1.jpeg";
import obra1 from "../assets/images/work/obra1.jpeg";

// Componentes específicos para esta página
import HeroSection from "../components/HeroSection.astro";
import SectionTitle from "../components/ui/SectionTitle.astro";
import ServiceCard from "../components/ui/ServiceCard.astro";

// Props específicas para el Layout de Servicios
const layoutProps = {
  pageTitle: "Servicios",
  metaDescription:
    "Descubre nuestros servicios especializados: Construcción y Obra Civil, Terracerías y Carreteras, Mecánica y Electromecánica, Desarrollo de Proyectos. Más de 20 años de experiencia en el sureste mexicano.",
  showBreadcrumb: false,
  breadcrumbItems: [
    { href: "/", text: "Inicio" },
    { href: "/servicios", text: "Servicios" },
  ],
  showContact: true,
  contactConfig: {
    highlightText: "solicita tu cotización",
    title: "¿LISTO PARA TU PRÓXIMO PROYECTO?",
    subtitle:
      "Contacta a nuestro equipo especializado para discutir los detalles de tu proyecto y recibir una propuesta personalizada.",
    phone: "(993) 324-5488",
    email: "contacto@sjtcontratistas.com",
    address: "Carr. Reforma-Dos Bocas s/n, Cumuapa 1ra. Tabasco",
    accentColor: "#FF5722",
    backgroundColor: "bg-gray-900",
    placeholder: "Describe tu proyecto...",
    buttonText: "Enviar Solicitud",
  },
};
---

<BaseLayout {...layoutProps}>
  <!-- ========================================= -->
  <!-- CONTENIDO ESPECÍFICO DE SERVICIOS -->
  <!-- ========================================= -->

  <!-- Hero Section -->
  <HeroSection
    name_company="Nuestros Servicios Especializados"
    subtitle="Construcción, Obra Civil, Terracerías y Desarrollo Integral de Proyectos"
    showOverlay={true}
    titlePosition="center"
    backgroundImage={panoramica1.src}
  />

  <!-- Overview ServiceCards -->
  <section class="py-16 bg-white">
    <div class="mx-8 sm:mx-12 lg:mx-16 xl:mx-20 px-0 mb-12">
      <SectionTitle
        highlightText="nuestros servicios"
        title="Construcción, Obra Civil y Desarrollo Integral"
        highlightColor="orange"
        alignment="center"
        size="lg"
      />
    </div>

    <!-- Service Cards Grid -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-8">
        <!-- Construcción y Obra Civil -->
        <ServiceCard
          area='<path d="M12 3l8 8v9a1 1 0 01-1 1h-6v-6H9v6H3a1 1 0 01-1-1v-9l8-8z"/>'
          serviceName="Construcción & Obra Civil"
          description="Servicios especializados en construcción y obra civil con estándares de calidad superiores y cumplimiento normativo integral."
          buttonText="Ver detalles"
          href="#construccion"
          cardNumber="01"
          iconColor="#FF5722"
        />

        <!-- Terracerías y Carreteras -->
        <ServiceCard
          area='<path d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 01.553-.894L9 2l6 3 5.447-2.724A1 1 0 0121 3.618v10.764a1 1 0 01-.553.894L15 18l-6-3z"/>'
