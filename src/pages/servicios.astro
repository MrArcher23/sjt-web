          href="#desarrollo-proyectos"
          cardNumber="04"
          iconColor="#9C27B0"
        />
      </div>
    </div>
  </section>

  <!-- Servicios Detallados -->

  <!-- 1. Construcción & Obra Civil -->
  <section id="construccion" class="py-20 bg-gray-50 relative overflow-hidden">
    <div
      class="absolute top-0 left-0 w-full h-1"
