<!-- JavaScript para animaciones y validación -->
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    
    if (prefersReducedMotion) {
      // Si el usuario prefiere animaciones reducidas, mostrar todo inmediatamente
      document.querySelectorAll('[class*="hero-"], [class*="section-"], [class*="contact-"], [class*="form-"], [class*="horarios-"]').forEach(el => {
        if (el instanceof HTMLElement) {
          el.style.opacity = '1';
          el.style.transform = 'none';
        }
      });
    } else {
      // Intersection Observer para animaciones scroll-triggered
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -100px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const element = entry.target;
            
            // Agregar clase animate con delay progresivo
            setTimeout(() => {
              element.classList.add('animate');
            }, Math.random() * 200);
            
            observer.unobserve(element);
          }
        });
      }, observerOptions);

      // Observar elementos animables
      document.querySelectorAll('.hero-badge, .hero-title, .hero-subtitle, .hero-cta, .section-title, .contact-method-card, .form-title, .form-container, .form-field, .form-submit, .form-guarantees, .horarios-title, .horarios-card').forEach(el => {
        if (el instanceof Element) {
          observer.observe(el);
        }
      });

      // Cleanup
      window.addEventListener('beforeunload', () => {
        observer.disconnect();
      });
    }

    // Validación y manejo del formulario
    const form = document.getElementById('contact-form');
    if (form) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Aquí puedes agregar la lógica de envío del formulario
        // Por ahora, mostraremos un mensaje de confirmación
        
        const submitButton = form.querySelector('.form-submit');
        if (submitButton instanceof HTMLButtonElement) {
          const originalText = submitButton.textContent;
          submitButton.textContent = 'Enviando...';
          submitButton.disabled = true;
          
          // Simular envío
          setTimeout(() => {
            alert('¡Gracias! Su cotización ha sido enviada. Nos pondremos en contacto en las próximas 24 horas.');
            submitButton.textContent = originalText;
            submitButton.disabled = false;
            if (form instanceof HTMLFormElement) {
              form.reset();
            }
          }, 2000);
        }
      });

      // Validación en tiempo real
      const requiredFields = form.querySelectorAll('input[required], select[required]');
      requiredFields.forEach(field => {
        field.addEventListener('blur', function(event) {
          const target = event.target as HTMLInputElement | HTMLSelectElement;
          if (!target.value.trim()) {
            target.style.borderColor = '#ef4444';
            target.style.boxShadow = '0 0 0 3px rgba(239, 68, 68, 0.1)';
          } else {
            target.style.borderColor = '#10b981';
            target.style.boxShadow = '0 0 0 3px rgba(16, 185, 129, 0.1)';
          }
        });

        field.addEventListener('input', function(event) {
          const target = event.target as HTMLInputElement | HTMLSelectElement;
          if (target.value.trim()) {
            target.style.borderColor = '#10b981';
            target.style.boxShadow = '0 0 0 3px rgba(16, 185, 129, 0.1)';
          }
        });
      });
    }
  });
</script>
