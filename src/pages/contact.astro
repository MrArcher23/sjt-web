    <!-- Horarios Ejecutivos Section -->
    <section class="py-20 lg:py-32 bg-primary-600 relative overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute inset-0 bg-grid-white/5 bg-grid-16"></div>
      <div class="absolute top-0 left-0 w-96 h-96 bg-yellow-400/10 rounded-full blur-3xl"></div>
      
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="horarios-title text-3xl lg:text-4xl font-heading font-bold text-white mb-12">
            Horarios <span class="text-yellow-400">Ejecutivos</span>
          </h2>

          <div class="grid md:grid-cols-3 gap-8">
            <!-- Horarios Normales -->
            <div class="horarios-card bg-white/10 backdrop-blur-sm rounded-2xl p-6 text-center">
