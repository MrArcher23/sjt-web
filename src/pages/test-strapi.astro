---
import strapi from '../utils/strapi';
import type { StrapiEntity, Service, Company, Article } from '../types/strapi';

let company: Company | null = null;
let services: StrapiEntity<Service>[] = [];
let articles: StrapiEntity<Article>[] = [];
let error: string | null = null;

try {
  // Probar conexi√≥n con Strapi Cloud usando el cliente arreglado
  console.log('üîç Testing Strapi connection...');
  console.log('üìç STRAPI_URL:', import.meta.env.STRAPI_URL);
  console.log('üîë Token presente:', import.meta.env.STRAPI_API_TOKEN ? 'S√≠' : 'No');
  
  // Usar el cliente de Strapi con URL limpia
  const articlesResponse = await strapi.getArticles();
  console.log('üî• RAW Response:', JSON.stringify(articlesResponse, null, 2));
  
  articles = articlesResponse.data || [];
  console.log('‚úÖ Articles found:', articles.length);
  
  // Debug de cada art√≠culo individualmente
  if (articles.length > 0) {
    articles.forEach((article, index) => {
      console.log(`üì∞ Article ${index}:`, JSON.stringify(article, null, 2));
      console.log(`   - Has attributes?`, !!article?.attributes);
      console.log(`   - Title?`, article?.attributes?.title);
    });
  }
  
} catch (e) {
  error = e instanceof Error ? e.message : 'Error desconocido';
  console.error('‚ùå Error connecting to Strapi:', e);
}
