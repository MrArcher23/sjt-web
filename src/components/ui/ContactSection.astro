---
export interface Props {
  highlightText: string;
  title: string;
  subtitle?: string;
  phone: string;
  email: string;
  address: string;
  accentColor?: string;
  backgroundColor?: string;
  placeholder?: string;
}

const {
  highlightText,
  title,
  subtitle,
  phone,
  email,
  address,
  accentColor = "var(--orange)",
  backgroundColor = "bg-dark",
  placeholder = "Escribe tu Email...",
} = Astro.props;
---

<section
  class={`contact-section ${backgroundColor} py-16 lg:py-20 relative overflow-hidden`}
>
  <!-- Decorative geometric elements -->
  <div class="absolute right-0 top-0 w-1/3 h-full opacity-10">
    <div class="absolute right-0 top-0 w-full h-full">
      <svg viewBox="0 0 400 300" class="w-full h-full">
        <defs>
          <linearGradient
            id="geometric-gradient"
            x1="0%"
            y1="0%"
            x2="100%"
            y2="100%"
          >
            <stop
              offset="0%"
              style={`stop-color:${accentColor};stop-opacity:0.3`}></stop>
            <stop
              offset="100%"
              style={`stop-color:${accentColor};stop-opacity:0.1`}></stop>
          </linearGradient>
        </defs>
        <polygon points="350,0 400,50 400,0" fill="url(#geometric-gradient)"
        ></polygon>
        <polygon points="300,0 400,100 400,0" fill="url(#geometric-gradient)"
        ></polygon>
        <polygon points="250,0 400,150 400,0" fill="url(#geometric-gradient)"
        ></polygon>
        <polygon points="200,0 400,200 400,0" fill="url(#geometric-gradient)"
        ></polygon>
        <polygon points="150,0 400,250 400,0" fill="url(#geometric-gradient)"
        ></polygon>
        <polygon points="100,0 400,300 400,0" fill="url(#geometric-gradient)"
        ></polygon>
      </svg>
    </div>
  </div>

  <!-- Decorative line -->
  <div
    class="absolute bottom-0 left-0 w-full h-1"
    style={`background: linear-gradient(90deg, ${accentColor} 0%, transparent 50%);`}
  >
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Left side: Title and Email form -->
      <div class="space-y-8">
        <!-- Title using SectionTitle component -->
        <div class="text-left">
          <div class="mb-2">
            <span
              class="text-sm font-semibold tracking-wide uppercase"
              style={`color: ${accentColor};`}
            >
              {highlightText}
            </span>
          </div>
          <h2
            class="text-3xl sm:text-4xl lg:text-5xl font-black text-white leading-tight mb-4"
          >
            {title}
          </h2>
          {subtitle && <p class="text-lg text-muted mb-6">{subtitle}</p>}
        </div>

        <!-- Email subscription form -->
        <div class="relative max-w-lg">
          <div
            class="flex rounded-full bg-white/10 backdrop-blur-sm border border-white/20 overflow-hidden"
          >
            <input
              type="email"
              placeholder={placeholder}
              class="flex-1 bg-transparent text-white px-6 py-4 focus:outline-none text-base placeholder-muted"
            />
            <button
              type="submit"
              class="flex items-center justify-center w-14 h-14 rounded-full m-1 transition-all duration-300 hover:scale-105 focus:scale-105"
              style={`background-color: ${accentColor};`}
              aria-label="Enviar email"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
              </svg>
            </button>
          </div>
        </div>
      </div>

      <!-- Right side: Contact information -->
      <div class="grid grid-cols-1 gap-8">
        <!-- Phone -->
        <div class="flex items-start space-x-4 group">
          <div
            class="flex items-center justify-center w-12 h-12 rounded-xl transition-all duration-300 group-hover:scale-110"
            style={`background-color: ${accentColor}20; border: 1px solid ${accentColor}40;`}
          >
            <svg
              class="w-6 h-6"
              style={`color: ${accentColor};`}
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
          </div>
          <div>
            <h3
              class="text-sm font-semibold text-secondary uppercase tracking-wide mb-1"
            >
              Teléfono
            </h3>
            <a
              href={`tel:${phone.replace(/\s/g, "")}`}
              class="text-xl font-bold text-white hover:opacity-80 transition-opacity duration-300"
            >
              {phone}
            </a>
          </div>
        </div>

        <!-- Email -->
        <div class="flex items-start space-x-4 group">
          <div
            class="flex items-center justify-center w-12 h-12 rounded-xl transition-all duration-300 group-hover:scale-110"
            style={`background-color: ${accentColor}20; border: 1px solid ${accentColor}40;`}
          >
            <svg
              class="w-6 h-6"
              style={`color: ${accentColor};`}
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
              ></path>
            </svg>
          </div>
          <div>
            <h3
              class="text-sm font-semibold text-secondary uppercase tracking-wide mb-1"
            >
              Atención A Clientes
            </h3>
            <a
              href={`mailto:${email}`}
              class="text-xl font-bold text-white hover:opacity-80 transition-opacity duration-300 break-all"
            >
              {email}
            </a>
          </div>
        </div>

        <!-- Address -->
        <div class="flex items-start space-x-4 group">
          <div
            class="flex items-center justify-center w-12 h-12 rounded-xl transition-all duration-300 group-hover:scale-110"
            style={`background-color: ${accentColor}20; border: 1px solid ${accentColor}40;`}
          >
            <svg
              class="w-6 h-6"
              style={`color: ${accentColor};`}
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
              ></path>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
          </div>
          <div>
            <h3
              class="text-sm font-semibold text-secondary uppercase tracking-wide mb-1"
            >
              Dirección
            </h3>
            <p class="text-xl font-bold text-white">
              {address}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    position: relative;
  }

  /* Hover effects for contact items */
  .contact-section .group:hover .w-12 {
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
  }

  /* Email input styling */
  .contact-section input::placeholder {
    opacity: 0.7;
  }

  .contact-section input:focus {
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.1);
  }

  /* Button hover effect */
  .contact-section button:hover {
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  /* Responsive text sizing */
  @media (max-width: 640px) {
    .contact-section h2 {
      font-size: 2rem;
      line-height: 1.1;
    }
  }
</style>
